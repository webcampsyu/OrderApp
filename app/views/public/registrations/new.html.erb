<div class="container">
  <div class="row">
    <div class="col-10">
      <h3 class="mt-5 mb-5 text-center", style="margin-left:100px; width:200px; background-color:#d3d3d3;">新規登録</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="field row", style="margin-left:70px">
        <%= f.label "工務店名", class: "col-form-label col-3 mb-3" %><br />
        <%= f.text_field :name, autofoucus: true, class: "col-3 form-control", pleceholder: "⚪︎⚪︎工務店" %>
      </div>
      <div class="field row", style="margin-left:70px">
        <%= f.label "パスワード(6文字以上)", class: "col-form-label col-3 mb-3" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "ml-5 col-3 form-control" %>
      </div>
      <div class="field row", style="margin-left:70px">
        <%= f.label "パスワード(確認用)", class: "col-form-labe col-3" %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "ml-5 col-3 form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "新気登録", class: "btn btn-success mt-4", style: "width:150px; margin-left:335px;" %>
      </div>
      <% end %>
      <h5 class="text-center mb-4 mt-5" style="width:270px; background-color:#d3d3d3; margin-left:100px">すでに登録済みの方</h5>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
  
