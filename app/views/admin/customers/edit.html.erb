<div class="container">
  <h2 class="my-5", style="background-color:#d3d3d3;"><%= name(@customer) %>さんのお客様情報></h2>
    <div class="col-12">
      <%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
      <div class="field-row">
        <%= f.label :"会員ID", class:"col-4" %>
        <%= f.label :@customer.id %>
      </div>
      <div class="field-row">
        <%= f.label :"名前", class:"col-4" %>
        <%= f.text_field :name, class:"col-3" %>
      </div>
      <div class="field-row">
        <%= f.label :"メールアドレス", class:"col-4" %>
        <%= f.text_field :email, class:"col-3" %>
      </div>
      <div class="form-group col-11 d-flex justify-content-around">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
</div>