<div class="container">
  <h3 class="text-center mb-4 mt-5", style="margin-left:100px; width:230px; background-color:#d3d3d3;">商品新規登録</h3>
  <div class="row">
    <div class="col-6 mx-auto">
      <%= form_with model: @product, url: admin_products_path do |f| %>
      <div class="form-group">
        <%= f.label :商品画像, style: "margin-right:60px;" %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label :商品名, style: "margi-right:75px;" %>
        <%= f.text_field :name, placeholder: "商品名" %>
      </div>
      <div class="form-group">
        <%= f.label :商品説明, style: "margin-right:60px;" %>
        <%=f.text_area :explanation, placeholder: "ここに説明文を記述します", size: "30x5" %>
      </div>
      <div class="form-group">
        <%= f.label :規格, style: "margin-right:60px;" %>
        <%= f.text_area :size, placeholder: "サイズを記述" %>
      </div>
      <div class="form-group">
        <%= f.label :税抜価格, style: "margin-right:60px;" %>
        <%= f.number_field :price, placeholder: "1000" %>円
      </div>
      <div class="form-group">
        <%= f.label :ジャンル, style: "margin-right:60px;" %>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), include_blank: "選択してください" %>
      </div>
      <div class="form-group">
        <%= f.label :販売ステータス %>
        <div class="ml-3">
          <%= f.radio_button :is_sold_out, false %>
          <%= f.label :is_sold_out_false, "在庫あり" %>
        </div>
        <div class="ml-3">
          <%= f.radio_button :is_sold_out, true %>
          <%= f.label :is_sold_out_true, "入荷待ち" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "新規登録", class: "btn btn-success rounded text-white", style: "margin-left:200px;" %>
      </div>
      <% end %>
    </div>
  </div>
</div>