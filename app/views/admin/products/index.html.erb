<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h3 class="text-center mt-5", style="margin-left:50px; width:200px; background-color:#d3d3d3;">商品一覧</h3>
      <%= link_to "+", new_admin_product_path, class "text-decoration-none text-secondary d-flex justify-content-end", style: "font-size:40px;" %>
      <table class="table mx-auto">
        <thead class="table-secondary">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>規格</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name, admin_product_path(product) %></td>
            <td><%= product.size %></td>
            <td><%= product.price %></td>
            <td><%= product.genre.name %></td>
            <% if product.is_sold_out %>
            <td class="text-danger">入荷待ち</td>
            <% else %>
            <td class="text-success">在庫あり</td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center"><%= paginate @products, theme: 'twitter-bootstrap4' %></div>
    </div>
  </div>
</div>