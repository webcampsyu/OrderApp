<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="text-center mb-5 mt-5 w-25", style="background-color:#d3d3d3;">ジャンル一覧・追加</h3>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
      
      <table class='table mt-5 w-50' >
        <thead style="background-color:#d3d3d3;">
          <tr>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
        <tbody>
          <th><%= genre.name %></th>
          <th><%= link_to "編集する", edit_genre_path(genre), class: "btn btn-success py-0" %></th>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>